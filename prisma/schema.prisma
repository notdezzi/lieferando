generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Product {
    id          Int    @id @default(autoincrement())
    name        String
    description String
    price       Float
    shopid      Int
    shop        Shop   @relation(fields: [shopid], references: [id])

    Order Order[]

    Menu Menu[]
}

model User {
    id               Int      @id @default(autoincrement())
    name             String
    username         String   @unique
    password         String
    email            String   @unique
    type             String
    orders           Order[]
    deliverylocation Int      @unique
    location         Location @relation(fields: [deliverylocation], references: [id])
    Shop             Shop[]
    Rating           Rating[]
}

model Location {
    id      Int    @id @default(autoincrement())
    street  String
    number  Int
    zipcode Int
    country String
    notes   String

    User User[]
}

model Order {
    id         Int       @id @default(autoincrement())
    userid     Int
    user       User      @relation(fields: [userid], references: [id])
    shopid     Int
    shop       Shop      @relation(fields: [shopid], references: [id])
    totalprice Float
    date       DateTime
    items      Product[]
}

model Shop {
    id          Int    @id @default(autoincrement())
    ownerid     Int    @unique
    owner       User   @relation(fields: [ownerid], references: [id])
    description String
    menus       Menu[]

    Product Product[]

    Order Order[]

    Rating Rating[]
}

model Menu {
    id          Int       @id @default(autoincrement())
    shopid      Int
    shop        Shop      @relation(fields: [shopid], references: [id])
    title       String
    description String
    products    Product[]
}

model Rating {
    id          Int    @id @default(autoincrement())
    description String
    rating      Int
    driverid    Int
    driver      User   @relation(fields: [driverid], references: [id])
    shopid      Int
    shop        Shop   @relation(fields: [shopid], references: [id])
}
